#include <stdio.h>
int main()
{
    int r, g, b;
    float c, m, y, k, w;
    printf("Enter the value of red color between 0 to 255   = ");
    scanf("%d", &r);
    printf("Enter the value of green color between 0 to 255 = ");
    scanf("%d", &g);
    printf("Enter the value of blue color between 0 to 255  = ");
    scanf("%d", &b);
    if ((r < 0) || (r > 255) || (g < 0) || (g > 255) || (b < 0) || (b > 255))
        printf("you entered a wrong entry !");
    else
    {
        if (r == 0 && g == 0 && b == 0)
        {
            c = 0;
            m = 0;
            y = 0;
            k = 1;
        }
        else
        {

            w = (r > g) ? ((r > b) ? r : b) : ((g > b) ? g : b);
            w = w / 255.0;
            c = (w - r / 255.0) / w;
            m = (w - g / 255.0) / w;
            y = (w - b / 255.0) / w;
            k = 1 - w;
        }
        printf("Cyan is      %.0f%%\n", c * 100);
        printf("Magenta is   %.0f%%\n", m * 100);
        printf("Yellow is    %.0f%%\n", y * 100);
        printf("Black is     %.0f%%\n", k * 100);
    }
    return 0;
}